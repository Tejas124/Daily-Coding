This program converts Decimal to Binary

#include<iostream>
using namespace std;

int main()
{
    int arr[10], n,i;
    cout<<"Enter the number: ";
    cin>>n;

    for(i=0;n>0;i++)
    {
        arr[i]=n%2;
        n=n/2;
    }
    cout<<"\nBinary form of the number is: ";
    for(i=i-1;i>=0;i--)
    {
        cout<<arr[i];
    }

    return 0;
}
